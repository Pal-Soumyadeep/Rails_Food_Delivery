<h1>Login</h1>

<%= form_with url: sign_in_path do |form| %>
  <div class = "mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "mail@mail.com" %>
  </div>

  <div class = "mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  
  <div class = "mb-3">
    <%= form.submit "Login", class: "btn btn-primary" %>
    <%= link_to "Don't have an account?", sign_up_path, class: "d-flex justify-content-end"%>
  </div>
<% end %>